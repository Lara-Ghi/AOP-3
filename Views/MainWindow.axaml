<Window
        x:Class="AOP_3.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AOP_3.ViewModels"
        Title="Global Music Streaming Service"
        d:DesignHeight="900"
        d:DesignWidth="1200"
        x:DataType="vm:MainWindowViewModel"
        CanResize="True"
        Icon="/Assets/avalonia-logo.ico"
        mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,0,0,0">
        <Grid
                Margin="20"
                ColumnDefinitions="Auto, 1*"
                RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                ShowGridLines="True">

            <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                <ToggleButton Content="Toggle Listening Time Chart" IsChecked="{Binding IsListeningTimeChartVisible}" />
                <ToggleButton Content="Toggle Platform Subscription Chart" IsChecked="{Binding IsPlatformSubscriptionChartVisible}" />
                <ToggleButton Content="Toggle Platform Chart" IsChecked="{Binding IsPlatformChartVisible}" />
                <ToggleButton Content="Toggle Genre Chart" IsChecked="{Binding IsGenreChartVisible}" />
                <ToggleButton Content="Toggle Country Chart" IsChecked="{Binding IsCountryChartVisible}" />
                <ToggleButton Content="Toggle Subscription Chart" IsChecked="{Binding IsSubscriptionChartVisible}" />
                <ComboBox MaxDropDownHeight="100" SelectedIndex="0">
                    <ComboBoxItem>Top Streaming Platforms</ComboBoxItem>
                    <ComboBoxItem>Top Genres</ComboBoxItem>
                    <ComboBoxItem>Users By Country</ComboBoxItem>
                    <ComboBoxItem>Subscription Types</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="Dashboard"
                HorizontalAlignment="Center"
                FontSize="35"
                Foreground="RoyalBlue"
                FontWeight="Bold" />

            <lvc:CartesianChart
                    Title="{Binding ListeningTimeTitle}"
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="300"
                    Margin="0,0,0,5"
                    BorderBrush="WhiteSmoke"
                    BorderThickness="2"
                    CornerRadius="10"
                    Series="{Binding ListeningTimeSeries}"
                    XAxes="{Binding ListeningTimeXAxes}"
                    YAxes="{Binding ListeningTimeYAxes}"
                    IsVisible="{Binding IsListeningTimeChartVisible}" 
                    ZoomMode="X"/>

            <lvc:CartesianChart
                    Title="{Binding PlatformSubscriptionTitle}"
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="300"
                    Margin="0,0,0,5"
                    BorderBrush="WhiteSmoke"
                    BorderThickness="2"
                    CornerRadius="10"
                    Series="{Binding PlatformSubscriptionSeries}"
                    IsVisible="{Binding IsPlatformSubscriptionChartVisible}" 
                    ZoomMode="Y"/>

            <lvc:CartesianChart
                    Title="{Binding PlatformTitle}"
                    Grid.Row="3"
                    Grid.Column="1"
                    Height="300"
                    Margin="0,0,0,5"
                    BorderBrush="WhiteSmoke"
                    BorderThickness="2"
                    CornerRadius="10"
                    Series="{Binding PlatformSeries}"
                    YAxes="{Binding PlatformYAxes}"
                    IsVisible="{Binding IsPlatformChartVisible}" 
                    ZoomMode="Y"/>

            <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    Content="Delete"
                    Background="Red"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Command="{Binding DeletePlatformChart}" />

            <lvc:PieChart
                    Title="{Binding TopGenreTitle}"
                    Grid.Row="5"
                    Grid.Column="1"
                    Height="300"
                    Margin="0,0,0,5"
                    BorderBrush="WhiteSmoke"
                    BorderThickness="2"
                    CornerRadius="10"
                    Series="{Binding GenreSeries}"
                    IsVisible="{Binding IsGenreChartVisible}" />

            <TextBlock
                    Grid.Row="6"
                    Grid.Column="1"
                    Text="Users By Country" 
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="RoyalBlue"
                    IsVisible="{Binding IsCountryChartVisible}" />

            <lvc:GeoMap
                    Grid.Row="6"
                    Grid.Column="1"
                    Height="300"
                    Margin="0,50,0,5"
                    BorderBrush="WhiteSmoke"
                    BorderThickness="2"
                    CornerRadius="10"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                    MapProjection="Mercator"
                    Series="{Binding CountrySeries}"
                    IsVisible="{Binding IsCountryChartVisible}" />

            <lvc:PieChart
                    Title="{Binding SubscriptionTitle}"
                    Grid.Row="8"
                    Grid.Column="1"
                    Height="300"
                    Margin="0,0,0,5"
                    BorderBrush="WhiteSmoke"
                    BorderThickness="2"
                    CornerRadius="10"
                    Series="{Binding SubscriptionSeries}"
                    IsVisible="{Binding IsSubscriptionChartVisible}" />

        </Grid>
    </ScrollViewer>
</Window>